@model Rocky.Models.ViewModels.HomeVM

<div class="container">
    <div class="text-center">
        <div class="btn btn-dark filter-button" data-filter="all">All</div>
        @foreach (var obj in Model.Categories)
        {
            <div class="btn btn-outline-secondary filter-button" data-filter="@obj.Name.Replace(' ', '_')">
                @obj.Name
            </div>
        }
    </div>
    <div class=" row">
        @foreach (var prod in Model.Products)
        {
            //display products
            <partial name="_IndividualProductCard" model="prod" />
        }
    </div>
</div>
@section Scripts{ 
    <script>
    $(document).ready(function(){

    $(".filter-button").click(function(){

        var value = $(this).attr('data-filter');
        if(value == "all")
        {
            $('.filter').show('1000');
        }
        else
        {
            $(".filter").not('.'+value).hide('3000');
            $('.filter').filter('.'+value).show('3000');

        }
    });

});
    </script>
}